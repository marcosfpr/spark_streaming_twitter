FROM python:3.8


WORKDIR /usr/src/stream
COPY . /usr/src/stream

RUN pip install -r requirements.txt

ENV HDFS_HOST_NAME = "0.0.0.0"
ENV HDFS_HOST_PORT 8020

ENV APP_HOST_NAME "0.0.0.0"

ENV SPARK_MASTER_NAME "0.0.0.0"
ENV SPARK_MASTER_PORT 7077
ENV SPARK_DRIVER_PORT 41100

ENV TWITTER_CLIENT "0.0.0.0"
ENV TWITTER_PORT 9017

ENV DASHBOARD_CLIENT "0.0.0.0"
ENV DASHBOARD_PORT 5009

CMD ["python", "server.py"]